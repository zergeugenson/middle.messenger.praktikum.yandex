<div class="login-container centeres-container">
	<div class="login-window">
		<h2>Вход</h2>
		<form id="login-form" action="">
			<div class="login-window__input-container">
				{{> inputField id="log-login" name="login" type="text" placeholder="Введите логин" error="Нет такого логина"}}
			</div>
			<div class="login-window__input-container">
				{{> inputField id="log-password" name="password" type="password" placeholder="Введите пароль" error=""}}
			</div>
			<div class="login-window__input-container">
				{{> submitButton id="signup-button" text="Войти"}}
			</div>
		</form>
		<div class="login-window__input-container register-link">
			{{> iLink href="#" data-page="registerPage" disabled="true" text="Зарегистрироваться" }}
		</div>
	</div>
</div>
