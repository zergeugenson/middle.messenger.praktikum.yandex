<main class="chat-page">
	<div class="chat-page__left-column">
		<div class="profile-link">{{> iLink href="#" data-page="profilePage" text="Профиль >>" }}</div>
		<!-- Не вижу пока смысла оборачивать это поле в form, т.к. возможно, поиск будет на клиенте -->
		{{> inputField id="message-field" name="search" type="text" placeholder="Поиск контактов" error=""}}
		{{> chatContact }}
	</div>
	<div class="chat-page__right-column">
		<div class="header-field">
			<div class="header-field__avatar"></div>
			<div class="header-field__name">Андрей</div>
			<div class="header-field__actions">
				<div class="actions-button"><img src="/images/three-dots.png" alt="Открыть меню" /></div>
			</div>
		</div>
		<div class="messages-field">
			<!-- не хочу сейчас городить запуск chatMessage в цикле, я просто хотел показать скролл окна, когда много контента -->
			{{> chatMessage }}
			{{> chatMessage }}
			{{> chatMessage }}
			{{> chatMessage }}
			{{> chatMessage }}
			{{> chatMessage }}
		</div>
		<div class="typing-field">
			<p><img src="/images/skrepka.png" alt="Добавить вложение" /></p>
			<form action="#" id="send-message-from">{{> inputField id="message-field" name="message" type="text" placeholder="Сообщение" error=""}}</form>
			<p>{{> roundButton id="message-send" disabled="true" }}</p>
		</div>
	</div>
</main>
